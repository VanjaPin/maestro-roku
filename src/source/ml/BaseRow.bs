import "pkg:/source/ml/FocusIndicatorConfig.bs"

namespace list
  @node("ml_BaseRow", "BaseView")
  class BaseRow extends view.BaseView

    '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
    '++ Pubic Fields
    '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++

    'Instance of RowContent
    @observer("_onContentChange")
    public content as types.Node

    public index = -1
    public renderState = "none"
    @observer("onIsRenderedChange")
    public isRendered = false
    public isInViewport = false
    public height = 0
    public width = 0
    public screenPos = 0

    'set this to true, if you have row content that changes other fields you want to know about in `onContentChange`
    public alwaysNotifyContentChange = false


    @alwaysnotify
    @observer("onJumpToIndex")
    public jumpToIndex = -1

    @alwaysnotify
    @observer("onAnimateToIndexChange")
    public animateToIndex = -1

    '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
    '++ Event Delegation
    '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++

    @observer("onListEvent")
    public listEvent as types.Assocarray
    public owner as types.Node

    '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
    '++ Protected Fields
    '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++

    protected _content ' use this reference for speed
    protected isInitialized = false
    protected wasHidden = false
    protected wasFocusable = true
    protected settings
    protected rowInfos = []

    function new()
      super(m.top.subType())
      list.itemDelegateMixin.setDelegate()
    end function

    '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
    '++ initialization
    '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++

    protected override function initialize()
      super.initialize()
      m.createViews()
      m.isInitialized = true
      m._onContentChange()
    end function

    '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
    '++ callbacks
    '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++

    private function _onContentChange()
      ' ? "ON CONTENT CHANGE "; m.isInitialized
      m.log.info("onContentChange")
      if m.isInitialized
        if m._content = invalid or not m._content.isSameNode(m.content)
          if m._content <> invalid
            m.unobserveNodeField(m._content, "changes", m.onContentItemsChange)
          end if
          'was no content or it changed
          m._content = m.content
          m.settings = list.listMixin.getRowSettings(m.owner.content, m._content)
          m.observeNodeField(m._content, "changes", m.onContentItemsChange)
          m.onContentChange(m._content)

        else if m._content <> invalid

          changes = []
          if m.wasHidden <> m._content.isHidden
            ' ? ">>>>>>>>>>>>>>> IS HIDDEN CHANGE " ; m._content.isHidden
            changes.push({ row: m._content, type: "isHidden", value: m._content.isHidden })
            m.wasHidden = m._content.isHidden
          end if
          if m.wasFocusable <> m._content.isFocusEnabled
            changes.push({ row: m._content, type: "isFocusEnabled", value: m._content.isFocusEnabled })
            m.wasFocusable = m._content.isFocusEnabled
          end if

          if m.alwaysNotifyContentChange
            m.onContentChange(m._content)
          end if

          if changes.count() > 0
            m.owner@._onContentItemChange(changes)
          end if

          'potentially update the header
        else
          '   'new content is invalid
        end if

      end if
    end function

    protected function onContentItemsChange(changes as types.array)
      m.log.info("This content has changed in some way")
    end function


    public function onJumpToIndex(index as integer)
      if m.content <> invalid and index <> -1
        m.jumpToItem(index, false)
      end if
    end function

    public function onAnimateToIndexChange(index as integer)
      if m.content <> invalid and index <> -1
        m.jumpToItem(index, true)
      end if
    end function

    '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
    '++ public api
    '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++

    public function recycle(newContent as types.node)
      m.onRecycle(newContent)
    end function

    public function forceUpdate(keepOldFocusIfPossible = true as boolean) as void
      if m.owner = invalid or m._content = invalid
        return
      end if
      m.settings = list.listMixin.getRowSettings(m.owner.content, m._content)
      m.onContentChange(m._content, keepOldFocusIfPossible = invalid or keepOldFocusIfPossible = true)
    end function

    public function getRenderer(index as integer) as object
      'implement me
      return invalid
    end function

    public function getRect(index as integer, useScreenCoords = false as boolean) as object
      'implement me
      return invalid
    end function

    public function getRowInfos(forceRecalculate = false as boolean) as types.array
      'bs:disable-next-line
      if m.viewManager <> invalid
        'bs:disable-next-line
        return m.viewManager.getRowInfos(m.top.translation[1], forceRecalculate)
      else
        focusSettings = m.settings.focusSettings

        screenPos = m.settings.screenPos
        yOffset = m.top.translation[1]

        positions = [
          new list.ComponentPosition(yOffset, screenPos) 'normal
          new list.ComponentPosition(yOffset, screenPos) 'float-scroll
        ]
        rowInfo = new list.ComponentInfo([m.width, m.height], focusSettings, positions, false, m.index, 0)
        return [rowInfo]
      end if
    end function

    public function getFocusIndicatorConfig(componentInfo as list.ComponentInfo, direction as integer, isFloatingFocus as boolean, isFromListScroll = false as boolean) as list.FocusIndicatorConfig
      componentInfo = m.getRowInfos(false)[componentInfo.componentIndex]
      'bs:disable-next-line
      if m.itemScroller <> invalid
        'bs:disable-next-line
        return m.itemScroller.getFocusIndicatorConfig(componentInfo, direction, isFloatingFocus, isFromLIstScroll)
      else
        return new list.FocusIndicatorConfig(m.index, -1, [0, 0], [0, 0], m.settings, true)
      end if
    end function

    public function chooseComponentInfoForScrollingIntoRow(componentInfo as list.ComponentInfo)
      'bs:disable-next-line
      if m.itemScroller <> invalid
        'bs:disable-next-line
        m.itemScroller.chooseComponentInfoForScrollingIntoRow(componentInfo)
      end if
    end function

    public function isVerticalFlowFocusPossible(componentInfo as list.ComponentInfo, direction as integer, activeScreenPos as integer, scrollPos as integer) as boolean
      'bs:disable-next-line
      if m.viewManager <> invalid
        'bs:disable-next-line
        return m.viewManager.isVerticalFlowFocusPossible(componentInfo, direction, activeScreenPos, scrollPos)
      end if
      return true
    end function

    public function focusOnContentsNow()
      'bs:disable-next-line
      if m.itemScroller <> invalid
        'bs:disable-next-line
        config = m.itemScroller.getFocusIndicatorConfig(m.itemScroller.componentInfo, m.itemScroller.direction, false, false)
        'bs:disable-next-line
        ' ? "FORCE FOCUS ON CONTENTS  C " ; config
        m.owner.focusIndicatorManager@.setNextFocusIndicatorConfig(config)
        m.owner.focusIndicatorManager@.setFocusComplete(config)
      end if
    end function

