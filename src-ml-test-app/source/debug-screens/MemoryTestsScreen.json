{
  "views": [
    {
      "id": "backgroundRectangle",
      "_type": "mv_Rectangle",
      "size": [1920, 1080],
      "color": "#000000"
    },
    {
      "id": "title",
      "_type": "mv_Label",
      "size": [1080, 100],
      "translation": [100, 50],
      "horizAlign": "left",
      "vertAlign": "center",
      "font": "font:MediumSystemFont",
      "color": "#ffffff",
      "text": "Memory management"
    },
    {
      "id": "message",
      "_type": "mv_Label",
      "translation": [300, 500],
      "size": [1000, 500],
      "font": "font:MediumSystemFont",
      "color": "#ffffff",
      "horizAlign": "left",
      "vertAlign": "top",
      "wrap": true,
      "maxLines": 3,
      "text": "Press up to add screens to tab controller, press down to change to previous screen of tab controller.\n \nPress left to remove screen from nav controller\n \nPress right to change view of dynamic container"
    },
    {
      "id": "navController",
      "_type": "mv_navController"
    },
    {
      "id": "dynamicContainer",
      "_type": "mv_DynamicContainer"
    },
    {
      "id": "tabController",
      "_type": "mv_TabController"
    },
    {
      "id": "buttonsGroup",
      "_type": "mv_ControlsGroup",
      "_initializeAfterCreatingChildren": true,
      "translation": [96, 928],
      "itemSpacings": [24],
      "layoutMode": "horiz",
      "keyDirection": "horiz",
      "selectedIndex": "$(onButtonsGroupSelectedIndex)",
      "_children": [
        {
          "_type": "mv_Button",
          "id": "navControllerAddButton",
          "text": "Add screen to nav controller",
          "autoSize": true,
          "size": [316, 88]
        },
        {
          "_type": "mv_Button",
          "id": "tabControllerAddButton",
          "text": "Add screen to tab controller",
          "autoSize": true,
          "size": [316, 88]
        },
        {
          "_type": "mv_Button",
          "id": "dynamicContainerAddButton",
          "text": "Add screen to dynamic controller",
          "autoSize": true,
          "size": [316, 88]
        },
        {
          "_type": "mv_Button",
          "id": "destroyButton",
          "text": "Destroy buttons screen",
          "autoSize": true,
          "size": [316, 88]
        }
      ]
    }
  ]
}
