{
  "views": [
    {
      "_type": "mv_Rectangle",
      "size": [1920, 1080],
      "color": "~colors.general.grey"
    },
    {
      "id": "layoutGroup",
      "_type": "mv_LayoutGroup",
      "translation": [100, 200],
      "layoutMode": "vert",
      "keyDirection": "vert",
      "itemSpacings": [40],
      "_initializeAfterCreatingChildren": true,
      "_children": [
        {
          "id": "textInput1",
          "_type": "mv_TextInput",
          "styleKey": "textInputScreen.inputs.normal",
          "text": "text 1"
        },
        {
          "id": "textInput2",
          "_type": "mv_TextInput",
          "styleKey": "textInputScreen.inputs.normal",
          "text": "text 2"
        },
        {
          "id": "textInput3",
          "_type": "mv_TextInput",
          "styleKey": "textInputScreen.inputs.normal",
          "text": "text 3"
        },
        {
          "id": "textInput4",
          "_type": "mv_TextInput",
          "styleKey": "textInputScreen.inputs.normal",
          "text": "text 4"
        },
        {
          "id": "textInput5",
          "_type": "mv_TextInput",
          "styleKey": "textInputScreen.inputs.normal",
          "text": "text 5"
        }
      ]
    },
    {
      "id": "controlsGroup",
      "_type": "mv_ControlsGroup",
      "translation": [1300, 200],
      "layoutMode": "vert",
      "keyDirection": "vert",
      "itemSpacings": [40],
      "_initializeAfterCreatingChildren": true,
      "observe": {
        "selectedIndex": "onControlsGroupSelectedIndex"
      },
      "_children": [
        {
          "id": "button1",
          "_type": "mv_Button",
          "text": "Toggle input 1"
        },
        {
          "id": "button2",
          "_type": "mv_Button",
          "text": "Toggle input 2"
        },
        {
          "id": "button3",
          "_type": "mv_Button",
          "text": "Toggle input 3"
        },
        {
          "id": "button4",
          "_type": "mv_Button",
          "text": "Toggle input 4"
        },
        {
          "id": "button5",
          "_type": "mv_Button",
          "text": "Toggle input 5"
        }
      ]
    }
  ],
  "$styles": {
    "textInputScreen": {
      "inputs": {
        "normal": {
          "$extends": "mv.TextInput.default",
          "normal.label.color": "#000000",
          "normal.inputImage.uri": "",
          "focused.label.color": "#ffffff",
          "error.label.color": "~colors.general.red",
          "disabled.label.color": "~colors.general.grey",
          "error.inputImage.uri": "pkg:/images/error.png"
        },
        "input_box": {
          "$extends": "mv.TextInput.default",
          "normal.label.color": "#a9a9a9",
          "normal.subTextLabel.color": "#000000",
          "normal.backgroundColor.size": [400, 50],
          "normal.inputImage.uri": "",
          "focused.backgroundColor.size": [400, 50],
          "error.inputImage.uri": "pkg:/images/error.png",
          "error.label.color": "~colors.general.red"
        },
        "normal_with_image": {
          "$extends": "mv.TextInput.default",
          "normal.label.color": "#000000",
          "normal.inputImage.uri": "pkg:/images/small-star-fhd.png",
          "focused.label.color": "#ffffff",
          "focused.inputImage.uri": "pkg:/images/small-star-highlighted-fhd.png",
          "error.inputImage.uri": "pkg:/images/error.png",
          "error.label.color": "~colors.general.red"
        }
      }
    }
  }
}
